{
  "Devices": {
    "FilterWheel": {
      "Protocol": "http://",
      "Host": "127.0.0.1",
      "ApiVersion": "v1",
      "Port": 11111,
      "DeviceNumber": 0,
      "ClientId": 1
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Verbose",
      "Override": {
        "System": "Warning",
        "Microsoft": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "RollingFile",
        "Args": {
          "pathFormat": "log-{Date}.json"
        }
      }
    ]
  }
}